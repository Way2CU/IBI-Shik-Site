<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header>
				<h1><cms:text constant="title"/></h1>
				<nav>
					<a href="#about">
						<cms:text constant="menu_about"/>
					</a>
					<a href="#plan">
						<cms:text constant="menu_plan"/>
					</a>
					<a href="#lecturers">
						<cms:text constant="menu_lecturers"/>
					</a>
					<a href="#program">
						<cms:text constant="menu_program"/>
					</a>
					<a href="#map">
						<cms:text constant="menu_map"/>
					</a>
					<a href="#gallery">
						<cms:text constant="menu_gallery"/>
					</a>
				</nav>
				<a href="javascript:void(0)" class="action"><cms:text constant=""/>
					<cms:text constant="label_action"/>
				</a>
			</header>

			<!-- section intro -->
			<section class="intro">
				<img src="_BASEURL.'/site/images/logo.svg'"  alt="logo" cms:eval="src"/>
				<p><cms:text constant="title"/></p>
				<a href="javascript:void(0)" class="action">
					<cms:text constant="label_action"/>
				</a>
			</section>

			<!-- section about -->
			<section id="about">
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="parts/about.xml"
					/>
				<div class="form_container">
					<h4><cms:text constant="title_form"/></h4>
					<span><cms:text constant="signup_notification"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
					<span><cms:text constant="signup_notification2"/></span>
				</div>
			</section>

			<!-- section plan -->
			<section id="plan">
				<cms:module
					name="articles"
					action="show"
					text_id="plan"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>
			</section>

			<!-- section lecturers -->
			<section id="lecturers">
				<h2><cms:text constant="menu_lecturers"/></h2>
				<ul class="lecture">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="lecturers"
						template="parts/lecturers.xml"
						/>
				</ul>

				<ul class="features">
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
						<param name="sprite" value="site-sprite.svg"/>
					</cms:module>
				</ul>

				<!-- Program list -->
				<ul id="program">
					<cms:module
						name="articles"
						action="show_list"
						group="program"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
					</cms:module>
				</ul>
			</section>

			<!-- location section -->
			<section id="map">
				<h2><cms:text constant="title_location"/></h2>
				<br/>
				<div class="location_container">
					<cms:module
						name="articles"
						action="show_list"
						group="location"
						template="parts/location.xml"
						/>
				</div>
				<img 
					src="_BASEURL.'/site/images/map.jpg'"  
					alt="map"
					cms:eval="src"
					/>
			</section>

			<!-- video section -->
			<section id="video">
				<h2><cms:text constant="title_video"/></h2>
				<div class="video_wrap">
					<cms:module
						name="youtube"
						action="show"
						text_id="video"
						embed="1"
						width="650"
						height="432"
						enable_api="1"
						/>
				</div>
			</section>

			<!-- section gallery -->
			<section id="gallery">
				<cms:module
					name="gallery"
					action="show_image_list"
					group="gallery"
					template="parts/image.xml"
					/>
			</section>

			<!-- Dialog form -->
			<div class="dialog_form">
					<span><cms:text constant="signup_notification"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
					<span><cms:text constant="signup_notification2"/></span>
			</div>

			<!-- Bottom section of the site -->
			<footer>
				<div class="footer_content">
					<img src="_BASEURL.'/site/images/logo.svg'"  alt="logo" cms:eval="src"/>
					<p><cms:text constant="title"/></p>
					<div class="sign">
						<span><cms:text constant="title_form"/></span>
						<a href="javascript:void(0)" class="action">
							<cms:text constant="label_action"/>
						</a>
					</div>
				</div>
				<!-- copyright -->
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
